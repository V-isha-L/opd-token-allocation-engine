<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="styles/main.css">
    <title>Mystic-Scroll</title>
</head>
<body>
    <div class="navBar">
        <div class="logo"><img src="/images/mystic-logo.png" alt="web-logo"></div>
        <div class="blogs">My Blogs</div>
    </div>
    <div class="container">
       <div class="post">
        <% if(locals.blogs) { %>
        <% blogs.forEach(blog => {   %>
            <h1><%= blog.title %></h1>
            <div class="option">
            <a href="blog/view/<%= blog.id %>">View</a>
            <a href="blog/Edit/<%= blog.id %>">Edit</a>
            <form action="blog/<%= blog.id %>/delete" method="post"><button type="submit" style="background-color: #4b3a24; border: 2px solid gray; border-radius: 12px; height: 20px; width: 60px; text-align: center;">Delete</button></form>
            </div>
    <%    }); %>
        <% } %>
       </div>
    </div>
</body>
</html>
